   /*========== BIBLIOTECA ==========*/  
#include <stdio.h> //Biblioteca Include
#include <conio.h> // Biblioteca Include
#include <windows.h> //Biblioteca Códigos WIN
#include <locale.h> //Acentuação
   /*========== BIBLIOTECA ==========*/    
   
   /*========== VARIÁVEIS ==========*/  
int multiplica(int R1, int R2){ 
int resultado;
resultado = R1 * R2; 
return(resultado); //Retorna Para o Resultado
}
int soma (int R1, int R2){
	int resultado;
	resultado = R1 + R2;
	return(resultado);
}
int menos(int R1, int R2){
	int resultado;
	resultado = R1 - R2;
	return(resultado);
}
/*========== VARIÁVEIS ==========*/ 

int main(void) 
{
	setlocale(LC_ALL, "Portuguese");
	system("color 0F"); //Cor de Fundo
	char opcao;
	//AQUI ESTA A VARIAVEL DOS ELEMENTOS
	char nome[21], sobrenome[21];
	//AQUI ESTA A VARIAVEL DOS ELEMENTOS
    int V1, V2, resultado; 
    printf("|============================================================|\n"); 
    printf("|                   Projeto Calculadora                      |\n");  
    printf("|	         Script Editado por Gabriel                  |\n");  
    printf("|              Data de Modificação 21/02/2018                |\n");
    printf("|         Editado na Linguagem C, e codificado 2018          |\n");
    printf("|                         v.1                                |\n");  
    printf("|============================================================|\n\n");
                        /*========== NOME EM STRING ==========*/ 
    printf("NOME: ");
    scanf("%s", nome);
    
    printf("SOBRENOME: ");
    scanf("%s", sobrenome);
    printf("\nOlá Senhor(a) %s, %s. Bem-Vindo ao seu sistema!\n\n", nome, sobrenome, setlocale(LC_ALL, "Portuguese"));
    
                        /*========== NOME EM STRING ==========*/
                        
                        /*========== CALCULADORA ==========*/
    
    int resp;
    do
	{
    printf("1 - MULTIPLICAÇÃO\n2 - ADIÇÃO\n3 - SUBTRAÇÃO\n4 - SAIR\n");
    opcao = getch();
       switch (opcao) 
	   {
    case '1':
    	system("color 0D"); 
        system("cls");
        printf("MULTIPLICAÇÃO\n");
        printf("Primeiro Valor: ");
        scanf("%d", &V1); 
        printf("Segundo Valor: ");
        scanf("%d", &V2); 
        resultado = multiplica(V1,V2); //Multiplica
        printf("Resultado = %d\n\n", resultado); //Obtém o Resultado
        break;
    case '2':
    	system("color 0C"); 
        system("cls");
        printf("ADIÇÃO\n");
        printf("Primeiro Valor: ");
        scanf("%d", &V1); 
        printf("Segundo Valor: ");
        scanf("%d", &V2); 
        resultado = soma(V1,V2); ///Soma
        printf("Resultado = %d\n\n", resultado); //Obtém o Resultado.
        break;
    case '3':
    	system("color 0E"); 
        system("cls");
        printf("SUBTRAÇÃO\n");
        printf("Primeiro Valor: ");
        scanf("%d", &V1); 
        printf("Segundo Valor: ");
        scanf("%d", &V2); 
        resultado = menos(V1,V2); //Subtraí
        printf("Resultado = %d\n\n", resultado); //Obtém o Resultado.
        break;
    case '4':
    	system("color 0F"); 
        system("cls");
          printf("|============================================================|\n"); 
          printf("|                   Projeto Calculadora                      |\n");  
          printf("|	         Script Editado por Gabriel                  |\n");  
          printf("|              Data de Modificação 21/02/2018                |\n");
          printf("|         Editado na Linguagem C, e codificado 2018          |\n");
          printf("|                         v.1                                |\n");  
          printf("|============================================================|\n\n");
        printf("Você acionou a opção fechar, Até Mais!\n");
        Sleep(5000); // Comando Sleep 
		exit(0);
    default:
    	system("color 0F"); 
        printf("Você deve escolher uma opção válida\n");
        printf("Precione qualquer tecla para voltar ao menu\n");
        system("pause");
    }
        
    system("color 0F");
    printf("--------------------------------------------------\n");
    printf("Digite 1 para continuar ou 2 para sair\n");
    printf("--------------------------------------------------\n");
    scanf("%d", &resp);
    
    }while(resp==1);
	return 0;
    
}

